/* Base markdown styles */
.markdown-content code:not(pre code) {
  background-color: rgba(0, 0, 0, 0.05);
  padding: 0.2em 0.4em;
  border-radius: 3px;
  font-size: 0.9em;
}

.markdown-content a {
  color: #0070f3;
  text-decoration: none;
}

.markdown-content a:hover {
  text-decoration: underline;
}

