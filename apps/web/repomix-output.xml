              <FormField
                id="fundingAmount"
                type="text"
                label="Funding Amount"
                value={values.fundingAmount || ""}
                onChange={(value) => setValue("fundingAmount", value)}
                error={errors.fundingAmount}
                required
                placeholder="e.g. 10000"
                inputMode="numeric"
              />
