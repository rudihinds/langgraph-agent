      mockAuth.getUser.mockResolvedValue({
        data: { user: mockUser },
        error: null,
      });

      // Render hook
      renderHook(() => useRequireAuth());

      // Allow effects to run
      await vi.waitFor(() => {
        expect(mockAuth.getUser).toHaveBeenCalled();
      });

      // Should not redirect
      expect(mockRouter.push).not.toHaveBeenCalled();
    });
  });
});
